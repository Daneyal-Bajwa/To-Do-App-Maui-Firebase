<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiApp1.ViewModel"
             xmlns:controls="clr-namespace:MauiApp1.Controls"
             x:Class="MauiApp1.View.CalendarPage"
             xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             x:DataType="viewModel:CalendarViewModel"
             Title="CalendarPage">
    <ContentPage.BindingContext>
        <viewModel:CalendarViewModel />
    </ContentPage.BindingContext>
    <ContentView>
         <!-- <controls:CalendarView Tasks="{Binding Tasks}" /> -->
        <cal:Calendar
                Events="{Binding Events}"
                EventsScrollViewVisible="True"
            EventIndicatorSelectedColor="Red">
        
            <cal:Calendar.EventTemplate>
                <DataTemplate>
                    <StackLayout Padding="15,0,0,0">
                        <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold"
                            FontSize="Medium" />
                        <Label
                            Text="{Binding Description}"
                            FontSize="Small"
                            LineBreakMode="WordWrap" />
                    </StackLayout>
                </DataTemplate>
            </cal:Calendar.EventTemplate>
        </cal:Calendar> 
    </ContentView>
</ContentPage>
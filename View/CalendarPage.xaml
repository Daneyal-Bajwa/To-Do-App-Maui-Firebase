<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:MauiApp1.ViewModel"
             x:Class="MauiApp1.View.CalendarPage"
             xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             x:DataType="viewModel:CalendarViewModel"
             Unloaded="UnloadedHandler">
    <ContentPage.BindingContext>
        <viewModel:CalendarViewModel />
    </ContentPage.BindingContext>
    <ContentView>
        <ScrollView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="62" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <cal:Calendar
                    x:Name="Calendar"
                    Events="{Binding Events}"
                    EventsScrollViewVisible="True"
                    EventIndicatorSelectedColor="Red"
                    Grid.Row="1"
                    Grid.ColumnSpan="2">

                    <cal:Calendar.EventTemplate>
                        <DataTemplate>
                            <StackLayout Padding="15,0,0,0" Margin="2" BackgroundColor="AliceBlue">
                                <Label
                            Text="{Binding Name}"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            TextColor="Black" />
                                <Label
                            Text="{Binding Description}"
                            FontSize="Small"
                            TextColor="Black"
                            LineBreakMode="WordWrap" />
                                <StackLayout.GestureRecognizers>
                                    <!-- need this fancy binding because we are inside the context of a data template -->
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:CalendarViewModel}}, Path=EventPressedCommand}"
                                                      CommandParameter="{Binding .}"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </DataTemplate>
                    </cal:Calendar.EventTemplate>
                </cal:Calendar>
                <Button Grid.Row="0" Grid.Column="1" Padding="10,5" Margin="10,10,20,0" 
                    Text="Add Task" FontAttributes="Bold" 
                    BorderWidth="1"
                    BorderColor="{StaticResource Accent2}"
                    TextColor="{StaticResource DarkBackground}" 
                    BackgroundColor="{StaticResource Accent}"
                    Command="{Binding AddTaskCommand}">
                    <!-- allows for a "clicked" animation where the button becomes darker -->
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
                                </VisualState.Setters>
                                <VisualState.StateTriggers>
                                    <StateTrigger IsActive="True" />
                                </VisualState.StateTriggers>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </Grid>
        </ScrollView>
    </ContentView>
</ContentPage>
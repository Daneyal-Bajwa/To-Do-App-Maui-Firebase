<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.LoginPage"
             xmlns:viewModel="clr-namespace:MauiApp1.ViewModel"
             Title="LoginPage">
    <ContentPage.BindingContext>
        <viewModel:LoginViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout HorizontalOptions="Center" Margin="0,130,0,0">


        <Label  Text="Sign In"
                Margin="0,0,0,0"
                HorizontalOptions="Center" />

        <Label
                Padding="10, 5"
                Text="Insert error message"
                HorizontalOptions="Center" />


        <Entry Text="Binding SignInUsername}"
                Placeholder="Username at least 6 Characters"
                Margin="0,30,0,15"
                BackgroundColor="DarkGrey"
                WidthRequest="200"/>
        <Entry Text="Binding SignInPassword}"
                Placeholder="Password at least 6 Characters"
                Margin="0,30,0,15"
                BackgroundColor="DarkGrey"
                WidthRequest="200"/>

        <Button
                Text="Login"
                Margin="0,0,0,10"
                Command="{Binding StartHomePageCommand}"
                MaximumWidthRequest="150"/>
        <HorizontalStackLayout>
            <Label
                Text="Don't have an account?"
                TextColor="Black"
                VerticalOptions="Center"/>
            <Button Command="{Binding StartHomePageCommand}"
                Text="SIGN UP"
                TextColor="Black" FontAttributes="Bold"
                Background="Transparent" />
        </HorizontalStackLayout>
        <HorizontalStackLayout
                HorizontalOptions="Center"
                Margin="0, 50, 0, -10" Spacing="-100">
            <Label WidthRequest="240"
                VerticalTextAlignment="Center"
                       Text="Don't want to sign in? "
                   VerticalOptions="Center"/>
            <Button Command="{Binding StartHomePageCommand}"
                Text="Continue as Guest"
                TextColor="Red" FontAttributes="Bold"
                Background="Transparent" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>